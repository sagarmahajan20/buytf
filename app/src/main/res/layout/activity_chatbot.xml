<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAE0E2"
    android:fitsSystemWindows="true"
    tools:context="sagar.mahajan.dveg.chatbot">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2.5">



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:fontFamily="serif"
                android:layout_margin="8dp"
                android:textSize="28sp"
                android:background="@drawable/buytf"
                android:gravity="center"
                android:id="@+id/name"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="17dp"
                android:background="@drawable/search"/>

            <ImageView
                android:id="@+id/basket"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="50dp"
                android:layout_margin="17dp"
                android:background="@drawable/notification"/>




        </LinearLayout>



    </androidx.appcompat.widget.Toolbar>


    <androidx.cardview.widget.CardView
        android:layout_width="378dp"
        android:layout_height="422dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WHAT  YOU  SAY  :"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="110dp"
                android:fontFamily="serif"/>

            <TextView
                android:id="@+id/txtSpeechInput"
                android:layout_width="367dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:padding="20dp"
                android:textColor="#000000"
                android:textSize="26dp"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YOUR AGENT SAYS"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="110dp"
                android:fontFamily="serif"
                />

            <TextView
                android:id="@+id/outputTex"
                android:layout_width="match_parent"
                android:layout_height="247dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:textColor="#000000"
                android:textSize="26dp"
                android:textStyle="normal"
                android:fontFamily="serif"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>








    <LinearLayout
        android:id="@+id/btnSpeak"
        android:layout_width="382dp"
        android:layout_height="117dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="510dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            android:scaleType="fitXY"
            app:lottie_rawRes="@raw/chatbotmike"
            android:layout_weight="1"
            app:lottie_loop="true"
            app:lottie_autoPlay="true" />

    </LinearLayout>



</RelativeLayout>