<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sagar.mahajan.dveg.DetailActivity">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2.5">



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:fontFamily="serif"
                android:layout_margin="8dp"
                android:textSize="28sp"
                android:gravity="center"
                android:background="@drawable/buytf"
                android:id="@+id/name"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="17dp"
                android:background="@drawable/search"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="50dp"
                android:layout_margin="17dp"
                android:background="@drawable/notification"/>




        </LinearLayout>



    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="58dp"
        android:layout_weight="1"
        android:fontFamily="serif"
        android:layout_marginStart="20dp"
        android:text="sagar"
        android:textColor="#2C3335"
        android:textSize="35sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/rectangle"
        android:layout_weight="1" />


    <TextView
        android:id="@+id/product_mrp"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:text="MRP"
        android:gravity="center"
        android:fontFamily="serif"
        android:textSize="20sp"
        android:layout_marginTop="360dp"/>


    <Spinner
        android:id="@+id/product_quantity"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="418dp"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:prompt="@string/quanttext"
        android:textSize="14sp"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="468dp"
        app:layout_constraintBottom_toBottomOf="parent" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="660dp"
        android:orientation="horizontal"
        android:background="#DAE0E2"
        android:weightSum="2">

        <Button
            android:id="@+id/basket"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:fontFamily="serif"
            android:background="@drawable/border"
            android:text="BASKET" />

        <Button
            android:id="@+id/add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:background="@drawable/rectanglecolor"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:text="ADD TO CART" />

    </LinearLayout>



</RelativeLayout>